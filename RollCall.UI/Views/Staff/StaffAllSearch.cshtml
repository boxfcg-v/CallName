
@{
    ViewBag.Title = "StaffAllSearch";
}
@using RollCall.Model;
@{
    ViewBag.Title = "Datatables";
}
@*<h3>
    Data Tables
    <small>Tables, one step forward.</small>
</h3>*@
<div class="container-fluid">

    <!-- START DATATABLE 2 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                   手機點名所有人員
                  
                </div>
                <div class="panel-body">
                    <table id="datatable2" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>工號</th>
                                <th>姓名</th>
                                <th>部門</th>
                                <th>線名</th>
                                <th>班別</th>
                                <th>職位</th>
                                <th>入廠日期</th>
                                @*<th><input type="checkbox"></th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Staff sf in (List<Staff>)ViewData["Staff"])
                            {
                                <tr class="">
                                    <td class="">@sf.ID</td>
                                    <td class="">@sf.NAME</td>
                                    <td class="">@sf.BU</td>
                                    <td class="">@sf.LINENAME</td>
                                    <td class="">@sf.CLASS</td>
                                    <td calss="">@sf.POSITION</td>
                                    <td class="">@sf.date1.ToString().Substring(0, @sf.date1.ToString().IndexOf(" "))</td>
                                    @*<td class=""><input type="checkbox"></td>*@
                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    <input type="text" name="filter_rendering_engine" placeholder="按照工號搜索" class="form-control input-sm datatable_input_col_search" />
                                </th>
                                <th>
                                    <input type="text" name="filter_browser" placeholder="按照姓名搜索" class="form-control input-sm datatable_input_col_search" />
                                </th>
                                <th>
                                    <input type="text" name="filter_platform" placeholder="按照部門搜索" class="form-control input-sm datatable_input_col_search" />
                                </th>
                                <th>
                                    <input type="text" name="filter_engine_version" placeholder="按照線名搜索" class="form-control input-sm datatable_input_col_search" />
                                </th>
                                <th>
                                    <input type="text" name="filter_css_grade" placeholder="按照班別搜索" class="form-control input-sm datatable_input_col_search" />
                                </th>
                                <th>
                                    <input type="text" name="filter_engine_version" placeholder="按照職位搜索" class="form-control input-sm datatable_input_col_search" />
                                </th>
                                <th>
                                    <input type="text" name="filter_css_grade" placeholder="按照入廠日期搜索" class="form-control input-sm datatable_input_col_search" />
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- END DATATABLE 2 -->


</div>
@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
}




